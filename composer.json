{
    "name": "ctw/ctw-middleware-tidy",
    "type": "library",
    "description": "This PSR-15 middleware formats, fixes and beautifies the HTML in the Response body using HTML Tidy.",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-tidy": "*",
        "ctw/ctw-middleware": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-diactoros": "^2.5",
        "laminas/laminas-servicemanager": "^3.6",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/var-dumper": "^5.2"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ctw\\Middleware\\TidyMiddleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CtwTest\\Middleware\\TidyMiddleware\\": "test"
        }
    },
    "scripts": {
        "phpcbf": "vendor/bin/phpcbf",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "rm -fr build/phpstan && mkdir -p build/phpstan && vendor/bin/phpstan analyse --error-format=raw --configuration=phpstan.neon | tee build/phpstan/output.txt",
        "qa": [
            "@phpcbf",
            "@phpcs",
            "@phpstan",
            "@test"
        ],
        "test": "export XDEBUG_MODE=coverage && vendor/bin/phpunit --debug"
    }
}
